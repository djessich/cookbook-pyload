[Unit]
Description=Downloadtool for One-Click-Hoster written in python.
After=local-fs.target remote-fs.target network.target network-online.target

[Service]
Type=forking
ExecStart=<%= node['pyload']['python_exec'] %> <%= node['pyload']['install_dir'] %>/pyLoadCore.py --daemon --configdir=<%= node['pyload']['config_dir'] %> --pidfile=<%= node['pyload']['pid_dir'] %>/pyload.pid
Restart=on-abort
User=<%= node['pyload']['user'] %>
Group=<%= node['pyload']['group'] %>
PIDFile=<%= node['pyload']['pid_dir'] %>/pyload.pid
KillSignal=SIGQUIT
UMask=0775

[Install]
WantedBy=multi-user.target
