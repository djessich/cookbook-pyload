[Unit]
Description=Downloadtool for One-Click-Hoster written in python.
After=local-fs.target remote-fs.target network.target network-online.target

[Service]
Type=forking
ExecStart=<%= @install_dir %>/pyLoadCore.py --daemon --configdir=<%= @config_dir %> --pidfile=<%= @pid_file %>
Restart=on-abort
User=<%= @user %>
Group=<%= @group %>
PIDFile=<%= @pid_file %>
KillSignal=SIGQUIT
UMask=0775

[Install]
WantedBy=multi-user.target
