#!/bin/sh
### BEGIN INIT INFO
# Provides:          pyload
# Required-Start:    $local_fs $remote_fs $network
# Required-Stop:     $local_fs $remote_fs $network
# Default-Start:     2 3 4 5
# Default-Stop:      0 1 6
# Short-Description: Downloadtool for One-Click-Hoster written in python.
# Description:       Downloadtool for One-Click-Hoster written in python.
### END INIT INFO

NAME="pyload"
DAEMON="<%= @install_dir %>/pyLoadCore.py"
USER="<%= @user %>"
GROUP="<%= @group %>"
PIDFILE="<%= @pid_file %>"
OPTIONS="--daemon --configdir=<%= @config_dir %> --pidfile=<%= @pid_file %>"

export PATH="${PATH:+$PATH:}/sbin"

[ -x $DAEMON ] || exit 0

[ -e /etc/default/$NAME ] && . /etc/default/$NAME

. /lib/lsb/init-functions

start_daemon () {
    start-stop-daemon --start --pidfile "$PIDFILE" --user "$USER:$GROUP" --chuid "$USER" --exec "$DAEMON" -- $OPTIONS | cut -d" " -f 3 > $PIDFILE
}

stop_daemon () {
    start-stop-daemon --stop --retry="TERM/30/KILL/5" --pidfile "$PIDFILE" --user "$USER:$GROUP" --chuid "$USER"
}

status_daemon () {
    start-stop-daemon --status --pidfile "$PIDFILE" --user "$USER:$GROUP" --chuid "$USER"
}

case "$1" in
    start)
        log_daemon_msg "Starting downloadtool for One-Click-Hoster written in python" "$NAME"
        start_daemon
        log_end_msg 0d
        ;;
    stop)
        log_daemon_msg "Stopping downloadtool for One-Click-Hoster written in python" "$NAME"
        stop_daemon
        log_end_msg 0
        ;;
    status)
        log_daemon_msg "Checking status of downloadtool for One-Click-Hoster written in python" "$NAME"
        status_daemon
        log_end_msg 0
        ;;
    restart)
        log_daemon_msg "Restarting downloadtool for One-Click-Hoster written in python" "$NAME"
        stop_daemon
        start_daemon
        log_end_msg 0
        ;;
    *)
        echo "Usage: /etc/init.d/$NAME {start|stop|status|restart}"
        exit 2
        ;;
esac

exit 0
