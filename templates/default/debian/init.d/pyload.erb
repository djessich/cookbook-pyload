#!/bin/sh
### BEGIN INIT INFO
# Provides:          pyload
# Required-Start:    $local_fs $remote_fs $network
# Required-Stop:     $local_fs $remote_fs $network
# Default-Start:     2 3 4 5
# Default-Stop:      0 1 6
# Short-Description: Downloadtool for One-Click-Hoster written in python.
# Description:       Downloadtool for One-Click-Hoster written in python.
### END INIT INFO

NAME="pyload"
DESC="downloadtool for One-Click-Hoster written in python"
DAEMON="<%= @install_dir %>/pyLoadCore.py"
USER="<%= @user %>"
GROUP="<%= @group %>"
PID_FILE="<%= @pid_file %>"
OPTIONS="--daemon --configdir=<%= @config_dir %> --pidfile=<%= @pid_file %>"

#export PATH="${PATH:+$PATH:}/sbin"

[ -x $DAEMON ] || exit 1

[ -e /etc/default/$NAME ] && . /etc/default/$NAME

. /lib/lsb/init-functions

running_pid() {
  pid=$1
  name=$2
  [ -z "$pid" ] && return 1
  [ ! -d /proc/$pid ] &&  return 1
  cmd=`cat /proc/$pid/cmdline | tr '\000' '\n' | awk 'NR==2'`
  [ "$cmd" != "$name" ] &&  return 1
  return 0
}

running() {
  [ ! -f "$PID_FILE" ] && return 1
  pid=`cat $PID_FILE`
  running_pid $pid $DAEMON || return 1
  return 0
}

start () {
    if [ -z "$USER" ] ; then
      start_daemon -p $PID_FILE $DAEMON $DAEMON_OPTS > /dev/null 2>&1
      RETVAL=$?
    else
      start-stop-daemon --start --pidfile "$PID_FILE" --user "$USER" --group "$GROUP" --chuid "$USER:$GROUP" --exec "$DAEMON" -- $OPTIONS > /dev/null 2>&1
      RETVAL=$?
    fi
    return $RETVAL
}

stop () {
    if [ -z "$USER" ] ; then
      killproc -p $PID_FILE $DAEMON
      RETVAL=$?
    else
      start-stop-daemon --stop --retry="TERM/30/KILL/5" --pidfile "$PID_FILE" --user "$USER" --group "$GROUP" --chuid "$USER:$GROUP"
      RETVAL=$?
    fi
    rm -f $PID_FILE
    return $RETVAL
}

case "$1" in
    start)
        log_daemon_msg "Starting $DESC: " "$NAME"
        if running ;  then
            log_progress_msg "apparently already running"
            log_end_msg 0
            exit 0
        fi
        if start ; then
            if  running ;  then
                log_end_msg 0
            else
                log_end_msg 1
            fi
        else
            log_end_msg 1
        fi
        ;;
    stop)
        log_daemon_msg "Stopping $DESC: " "$NAME"
        if running ; then
            RETVAL=0
            stop || RETVAL=$?
            log_end_msg $RETVAL
        else
            log_progress_msg "apparently not running"
            log_end_msg 0
            exit 0
        fi
        ;;
    restart)
        log_daemon_msg "Restarting $DESC: " "$NAME"
        RETVAL=0
        stop || RETVAL=$?
        sleep 2
        start || RETVAL=$?
        running || RETVAL=$?
        log_end_msg $RETVAL
        ;;
    status)
        log_daemon_msg "Checking status of $DESC: " "$NAME"
        if running ;  then
            log_progress_msg "running"
            log_end_msg 0
        else
            log_progress_msg "apparently not running"
            log_end_msg 1
            exit 3
        fi
        ;;
    *)
        echo "Usage: /etc/init.d/$NAME {start|stop|restart|status}"
        exit 2
        ;;
esac

exit 0
