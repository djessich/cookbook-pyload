# pyload
#
# Downloadtool for One-Click-Hoster written in python.
description	"pyload"

start on (local-filesystems and remote-filesystems and net-device-up IFACE!=lo)
stop on runlevel [016]

expect fork

setuid <%= @user %>
setgid <%= @group %>

kill signal SIGQUIT
umask 0775

exec <%= @install_dir %>/pyLoadCore.py --daemon --configdir=<%= @config_dir %> --pidfile=<%= @pid_file %>
