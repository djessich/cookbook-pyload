#!/bin/sh
### BEGIN INIT INFO
# Provides:          pyload
# Required-Start:    $local_fs $remote_fs $network
# Required-Stop:     $local_fs $remote_fs $network
# Default-Start:     2 3 4 5
# Default-Stop:      0 1 6
# Short-Description: Downloadtool for One-Click-Hoster written in python.
# Description:       Downloadtool for One-Click-Hoster written in python.
### END INIT INFO

. /lib/lsb/init-functions

[ -r /etc/default/pyload ] && . /etc/default/pyload

[ -x $DAEMON ] || exit 1

NAME="pyload"
DESC="downloadtool for One-Click-Hoster written in python"
START_TIMEOUT=2
STOP_TIMEOUT=2

running_pid () {
  pid=$1
  name=$2
  [ -z "$pid" ] && return 1
  [ ! -d /proc/$pid ] &&  return 1
  cmd=`cat /proc/$pid/cmdline | tr '\000' '\n' | awk 'NR==2'`
  [ "$cmd" != "$name" ] &&  return 1
  return 0
}

running () {
  [ ! -f "$PIDFILE" ] && return 1
  pid=`cat $PIDFILE`
  running_pid $pid "$DAEMON" || return 1
  return 0
}

start () {
    if [ -z "$USER" ] ; then
      start_daemon -p "$PIDFILE" "$DAEMON" $OPTIONS > /dev/null 2>&1
      RETVAL=$?
    else
      start-stop-daemon --start --pidfile "$PIDFILE" --user "$USER" --group "$GROUP" --chuid "$USER:$GROUP" --exec "$DAEMON" -- $OPTIONS > /dev/null 2>&1
      RETVAL=$?
    fi
    return $RETVAL
}

stop () {
    if [ -z "$USER" ] ; then
      killproc -p "$PIDFILE" "$DAEMON"
      RETVAL=$?
    else
      start-stop-daemon --stop --retry="TERM/30/KILL/5" --pidfile "$PIDFILE" --user "$USER" --group "$GROUP" --chuid "$USER:$GROUP"
      RETVAL=$?
    fi
    rm -f "$PIDFILE"
    return $RETVAL
}

case "$1" in
    start)
        log_daemon_msg "Starting $DESC" "$NAME"
        if running ;  then
            log_progress_msg "apparently already running"
            log_end_msg 0
            exit 0
        fi
        if start ; then
            [ -n "$START_TIMEOUT" ] && sleep "$START_TIMEOUT"
            if  running ;  then
                log_end_msg 0
            else
                log_end_msg 1
            fi
        else
            log_end_msg 1
        fi
        ;;
    stop)
        log_daemon_msg "Stopping $DESC" "$NAME"
        if running ; then
            RETVAL=0
            stop || RETVAL=$?
            sleep 1
            log_end_msg $RETVAL
        else
            log_progress_msg "apparently not running"
            log_end_msg 0
            exit 0
        fi
        ;;
    restart)
        log_daemon_msg "Restarting $DESC" "$NAME"
        RETVAL=0
        stop || RETVAL=$?
        [ -n "$STOP_TIMEOUT" ] && sleep "$STOP_TIMEOUT"
        start || RETVAL=$?
        [ -n "$START_TIMEOUT" ] && sleep "$START_TIMEOUT"
        running || RETVAL=$?
        log_end_msg $RETVAL
        ;;
    status)
        log_daemon_msg "Checking status of $DESC" "$NAME"
        if running ; then
            log_progress_msg "running"
            log_end_msg 0
        else
            log_progress_msg "apparently not running"
            log_end_msg 1
            exit 3
        fi
        ;;
    *)
        echo "Usage: /etc/init.d/$NAME {start|stop|restart|status}"
        exit 2
        ;;
esac

exit 0
